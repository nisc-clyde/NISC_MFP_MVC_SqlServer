@model NISC_MFP_MVC.ViewModels.AdminRegister


@{
    ViewBag.Title = "高級管理員帳號設置";
    Layout = null;
    <script type="module" src="@Url.Content("~/Scripts/Configuration/config.js")"></script>
}

<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/lib/sweetalert2-css")

</head>

<body>

    <div class="vh-100 d-flex justify-content-center align-items-center">

        <div class="col-md-4 p-5 shadow-sm border rounded-5 border-primary">
            <img src="../img/logo_b.png" class="mx-auto d-block img-fluid">

            <div id="databaseDiv">
                <p class="text-center fs-2 mb-0">
                    資料庫配置
                    <div class="text-secondary text-center">
                        請輸入欲連接之資料庫帳號及密碼
                    </div>
                </p>
                @using (Html.BeginForm("", "", FormMethod.Post, new { @id = "databaseConfigForm", @class = "overflow-auto px-5 pb-5 pt-1" }))
                {
                    <div class="mb-3">
                        <label for="databaseName" class="form-label">資料庫名稱</label>
                        <input type="text" class="form-control bg-opacity-10 border border-primary" id="databaseName">
                    </div>
                    <div class="mb-3">
                        <label for="databaseAccount" class="form-label">資料庫帳號</label>
                        <input type="password" class="form-control bg-opacity-10 border border-primary" id="databaseAccount">
                    </div>
                    <div class="mb-3">
                        <label for="databasePassword" class="form-label">資料庫密碼</label>
                        <input type="password" class="form-control bg-opacity-10 border border-primary" id="databasePassword">
                    </div>

                    <div class="mb-3 justify-content-end">
                        <button id="btnTestConnection" class="btn btn-primary btn-sm">測試連線</button>
                    </div>

                    <div class="bg-secondary bg-opacity-50 rounded my-4 mx-5" style="height:3px;">&nbsp;</div>

                    <div class="d-grid">
                        <button class="btn fs-4 btn-primary" type="submit">確定</button>
                    </div>
                }

                <div class="row">
                    <div class="col d-flex justify-content-end">
                        <button id="btnNext" class="btn btn-outline-primary">下一頁</button>
                    </div>
                </div>
            </div>

            <div id="adminRegisterDiv" style="display:none">
                <p class="text-center fs-2 mb-0">
                    管理員註冊
                    <div class="text-secondary text-center">
                        此帳號之註冊，為擁有最高權限之帳號
                    </div>
                </p>
                
                @using (Html.BeginForm("ConfigAdminRegister", "Login", FormMethod.Post, new { @id = "adminRegisterForm", @class = "overflow-auto px-5 pb-5 pt-1" }))
                {
                    <div class="mb-3">
                        <label for="adminRegisterAccount" class="form-label">帳號</label>
                        @Html.TextBoxFor(d => d.user_id, new { @class = "form-control bg-opacity-10 border border-primary", @id = "adminRegisterAccount" })
                        @Html.ValidationMessageFor(d => d.user_id, "", new { @class = "text-danger fs-6" })
                    </div>
                    <div class="mb-3">
                        <label for="adminRegisterPassword" class="form-label">密碼</label>
                        @Html.TextBoxFor(d => d.user_password, new { @class = "form-control bg-opacity-10 border border-primary", @id = "adminRegisterPassword", @type = "password" })
                        @Html.ValidationMessageFor(d => d.user_password, "", new { @class = "text-danger fs-6" })
                    </div>
                    <div class="mb-3">
                        <label for="adminRegisterPasswordRepeat" class="form-label">請再次輸入密碼</label>
                        @Html.TextBoxFor(d => d.user_password_confirm, new { @class = "form-control bg-opacity-10 border border-primary", @id = "adminRegisterPasswordConfirm", @type = "password" })
                        @Html.ValidationMessageFor(d => d.user_password_confirm, "", new { @class = "text-danger fs-6" })
                    </div>
                    <div class="mb-3">
                        <label for="adminRegisterName" class="form-label">名稱</label>
                        @Html.TextBoxFor(d => d.user_name, new { @class = "form-control bg-opacity-10 border border-primary", @id = "adminRegisterName" })
                    </div>
                    <div class="bg-secondary bg-opacity-50 rounded my-4 mx-5" style="height:3px;">&nbsp;</div>
                    <div class="d-grid">
                        <button class="btn fs-4 btn-primary" type="submit">註冊</button>
                    </div>
                }

                <div class="row">
                    <div class="col d-flex justify-content-between">
                        <button id="btnPrevious" class="btn btn-outline-primary">上一頁</button>
                        <button id="btnSkip" class="btn btn-outline-primary">回到登入</button>
                    </div>
                </div>
            </div>

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryvalmin")
    @Scripts.Render("~/lib/sweetalert2-js")

</body>
</html>



