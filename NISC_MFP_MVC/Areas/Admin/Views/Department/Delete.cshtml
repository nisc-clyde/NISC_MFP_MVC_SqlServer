@model NISC_MFP_MVC.ViewModels.DepartmentViewModel

@{
    string dept_usable;

    dept_usable = Model.dept_usable == "0" ? "停用" :
        Model.dept_usable == "1" ? "啟用" :
            Model.dept_usable;
}

<table id="deleteDataTable" class="table table-striped table-bordered w-100 fs-6">
    <thead>
    <tr>
        <th>部門編號</th>
        <th>部門名稱</th>
        <th>可用點數上限</th>
        <th>可用遞增餘額</th>
        <th>狀態</th>
        <th>部門管理者Email</th>
    </tr>
    </thead>
    <tbody>
    <tr id="deleteRowData">
        <th id="dept_id">@Model.dept_id</th>
        <th id="dept_name">@Model.dept_name</th>
        <th id="dept_value">@Model.dept_value</th>
        <th id="dept_month_sum">@Model.dept_month_sum</th>
        <th id="dept_usable" class="@(dept_usable == "啟用" ? "fw-bold text-success" : "fw-bold text-danger")">@dept_usable</th>
        <th id="dept_email">@Model.dept_email</th>
    </tr>
    </tbody>
</table>