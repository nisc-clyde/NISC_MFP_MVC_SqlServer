@{
    ViewBag.Title = "事務機管理";
    ViewBag.ActiveNav = "cardreader";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section CardReaderJS{
    <script type="module" src="~/Scripts/AdminPartialViewScripts/cardreader.js"></script>
}


@*欄位搜尋選項 - First Container - Start*@
<div class="cotainer-fluid shadow p-3 mb-4 bg-body-tertiary rounded bg-light">

    <div class="row border-bottom border-2 ">
        <div class="col-6 text-start fs-5 fw-bold" style="color: #1565C0">
            欄位搜尋選項&nbsp;<i class="fa-solid fa-magnifying-glass"></i>
        </div>
    </div>

    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 row-cols-xl-6 border-start border-2 bg-secondary bg-opacity-10">

        <div class="col col-xxl border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                <div class="col">
                    卡機編號
                </div>
            </div>
            <div class="row border-bottom border-2">
                <div class="col align-self-center py-2">
                    <input id="searchCardReader_CardreaderID" type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="col col-xxl border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                <div class="col">
                    IP位址
                </div>
            </div>
            <div class="row border-bottom border-2">
                <div class="col align-self-center py-2">
                    <input id="searchCardReader_IPAddress" type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="col col-xxl border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                <div class="col">
                    PORT
                </div>
            </div>
            <div class="row border-bottom border-2">
                <div class="col align-self-center py-2">
                    <input id="searchCardReader_Port" type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="col col-xxl border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                <div class="col">
                    卡機種類
                </div>
            </div>
            <div class="row border-bottom border-2">
                <div class="col align-self-center py-2">
                    <div class="dropdown">
                        <select id="searchCardReader_CardMachineTypeSelect" class="form-select">
                            <option id="searchCardReader_CardMachineTypeAll" selected value>全部</option>
                            <option id="searchCardReader_CardMachineTypeBusiness" value="M">事務機</option>
                            <option id="searchCardReader_CardMachineTypeCopier" value="F">影印機</option>
                            <option id="searchCardReader_CardMachineTypePrinter" value="P">印表機</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="col col-xxl border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                <div class="col">
                    運作模式
                </div>
            </div>
            <div class="row border-bottom border-2">
                <div class="col align-self-center py-2">
                    <select id="searchCardReader_WorkModeSelect" class="form-select">
                        <option id="searchCardReader_WorkModeAll" selected value>全部</option>
                        <option id="searchCardReader_WorkModeOnline" value="0">連線</option>
                        <option id="searchCardReader_WorkModeOffline" value="1">離線</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="col col-xxl border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                <div class="col">
                    卡號判斷開關
                </div>
            </div>
            <div class="row border-bottom border-2">
                <div class="col align-self-center py-2">
                    <select id="searchCardReader_CardOnOffSelect" class="form-select">
                        <option id="searchCardReader_CardOnOffAll" selected value>全部</option>
                        <option id="searchCardReader_CardOnOffOn" value="0">開啟</option>
                        <option id="searchCardReader_CardOnOffOff" value="1">關閉</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="col col-xxl border-end border-2 ">
            <div class="row justify-content-center border-bottom border-2 fw-semibold">
                <div class="col">
                    狀態
                </div>
            </div>
            <div class="row border-bottom border-2">
                <div class="col align-self-center py-2">
                    <select id="searchCardReader_CardStatusSelect" class="form-select">
                        <option id="searchCardReader_CardStatusAll" selected value>全部</option>
                        <option id="searchCardReader_CardStatusOnline" value="0">線上</option>
                        <option id="searchCardReader_CardStatusOffline" value="1">離線</option>
                    </select>
                </div>
            </div>
        </div>

    </div>
</div>
@*欄位搜尋選項 - First Container - End*@

@*事務機列表 - Third Cotainer - Start*@
<div class="cotainer-fluid shadow p-3 mb-4 bg-body-tertiary rounded bg-light">

    <div class="row border-bottom border-2 ">
        <div class="col text-start fs-5 fw-bold" style="color: #1565C0">
            事務機列表&nbsp;<i class="fa-solid fa-list"></i>
            <button id="btnAddCardReader" type="button" class="ms-3 btn btn-success mb-1">新增事務機</button>
            <div class="modal fade" id="cardReaderForm" role="dialog" data-url='@Url.Action("AddOrEdit", "CardReader")'></div>
        </div>
    </div>

    <div class="row p-2">
        <div class="table-responsive">
            <table id="searchCardReaderDataTable" class="table table-striped table-bordered w-100 table-hover">
                <thead>
                <tr>
                    <th>卡機編號</th>
                    <th>IP位置</th>
                    <th>PORT</th>
                    <th>卡機種類</th>
                    <th>運作模式</th>
                    <th>卡號判斷開關</th>
                    <th>狀態</th>
                    <th>操作</th>
                    <th>serial</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>

</div>
@*事務機列表 - Third Cotainer - End*@