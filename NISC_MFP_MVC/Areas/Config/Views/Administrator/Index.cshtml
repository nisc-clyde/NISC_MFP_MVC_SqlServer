@model NISC_MFP_MVC.ViewModels.Config.ConfigViewModel

@{
    ViewBag.Title = "系統設定 - 管理員新增";
    Layout = "~/Areas/Config/Views/Shared/_ConfigLayout.cshtml";
}


<div class="d-flex justify-content-start flex-wrap flex-md-nowrap align-items-baseline pt-3 mb-3 border-bottom">
    <h1 class="h2">
        新增管理員
    </h1>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <div class="text-secondary fs-6">
        此帳號之註冊，為擁有最高權限之帳號
    </div>
</div>

<div class="col-4 mb-5">
    @using (Html.BeginForm("ConfigAdminRegister", "Administrator", FormMethod.Post, new { id = "adminRegisterForm" }))
    {
        <div class="mb-3">
            <label for="adminRegisterAccount" class="form-label">帳號</label>
            @Html.TextBoxFor(d => d.adminRegister.user_id, new { Name = "user_id", @class = "form-control bg-opacity-10 border border-primary" })
            @Html.ValidationMessageFor(d => d.adminRegister.user_id, "", new { @class = "text-danger fs-6" })
        </div>
        <div class="mb-3">
            <label for="adminRegisterPassword" class="form-label">密碼</label>
            @Html.TextBoxFor(d => d.adminRegister.user_password, new { Name = "user_password", @class = "form-control bg-opacity-10 border border-primary", type = "password" })
            @Html.ValidationMessageFor(d => d.adminRegister.user_password, "", new { @class = "text-danger fs-6" })
        </div>
        <div class="mb-3">
            <label for="adminRegisterPasswordRepeat" class="form-label">請再次輸入密碼</label>
            @Html.TextBoxFor(d => d.adminRegister.user_password_confirm, new { Name = "user_password_confirm", @class = "form-control bg-opacity-10 border border-primary", type = "password" })
            @Html.ValidationMessageFor(d => d.adminRegister.user_password_confirm, "", new { @class = "text-danger fs-6" })
        </div>
        <div class="mb-3">
            <label for="adminRegisterName" class="form-label">名稱</label>
            @Html.TextBoxFor(d => d.adminRegister.user_name, new { Name = "user_name", @class = "form-control bg-opacity-10 border border-primary" })
        </div>
        <div class="bg-secondary bg-opacity-50 rounded my-4 mx-5" style="height: 3px;">&nbsp;</div>
        <div class="d-grid">
            <button class="btn fs-4 btn-primary" type="submit">註冊</button>
        </div>
    }
</div>